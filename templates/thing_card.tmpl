<div class="card">
    <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="{{ thing.image.url }}">
    </div>
    <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">{{ thing.name }}<i class="material-icons right">more_vert</i></span>
        <p> <a class="waves-effect waves-light btn modal-trigger" href="#modal-{{ thing.id }}">Bearbeiten</a></p>
    </div>
    <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">{{ thing.name }}<i class="material-icons right">close</i></span>
        <p>{{ thing.description }}</p>
    </div>
</div>
